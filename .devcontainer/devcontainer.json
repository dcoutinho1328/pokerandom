{
    "name": "Poke Randomizer",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "..",
        "args": {
            "VARIANT": "14"
        }
    },
    "remoteUser": "admin",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "dbaeumer.vscode-eslint"
            ]
        }
    },
    "postCreateCommand": "pip3 install -r requirements.txt",
    "forwardPorts": [
        3000
    ]
}